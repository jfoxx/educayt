<!DOCTYPE html>
<html>
	<head>
		<%= javascript_include_tag "jquery-1.5.min.js" %>
		<%= javascript_include_tag "jquery.js"  %>
		<%= yield(:head) %>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
	</head>
	<body>
		<div id="top_panel"><div class="logo" class="round"><%= link_to "Educayt", root_path%></div></div>
		<div class="wrapper">
			<%= render 'layouts/header'%>
			<div class="container">
				<%= render 'layouts/left_sidebar'%>
				<div id="content">
					
					<% flash.each do |key, value| %>
					<div class="flash <%= key %>">
						<%= value %>
					</div>
					<% end %>
                   	<%= yield %>
				</div>
			</div>
			<%= render 'layouts/footer' %>
		</div>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>