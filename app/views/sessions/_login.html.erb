<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<%= link_to 'Forgot Password', forgot_password_path, :class => 'popup' %>
<p>New user? <%= link_to "Sign up now!", signup_path %></p><br />
<div class="facebook">
  <ul>
       <li><%= image_tag("facebook_32.png", :alt => "facebook") %></li>
       <li><%= link_to "Sign in with Facebook" ,"/auth/facebook"%></li>
  </ul>
</div>